<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

</head>
<body>

<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Events</a>
  </div>
</nav>

    <a href="/add/events" class="btn btn-secondary mb-2">Add Events</a>
    <a href="/list" class="btn btn-primary mb-2">Applicants</a>


<div class="container-md custom-container">
  <div class="d-flex justify-content-center align-items-center flex-wrap p-4">
    <% for(let event of events){ %>

      <div class="card mx-2 mb-3" style="width: 18rem;height: 300px;">
        <div class="card-body text-center">
          <h2 class="card-title"> <%= event.title %> </h2><br>
          <h6 class="card-title"> <%= event.description %> </h6><br>
          <h4 class="card-text"> Rs. <%= event.price %> </h4>
        </div>
            <div class="align-items-center">
            <form action="/success" method="POST">
                <input type="hidden" name="eventId" value="<%= event.id %>">
                <button class="btn btn-success btn-lg btn-block">Apply</button>
            </form> <p>
            </div>
      </div>

    <% } %>
  </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>