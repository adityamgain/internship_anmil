{
  "compilerOptions": {
    "target": "es6",                           
    "module": "commonjs",                     
    "outDir": "./dist",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,          
    "emitDecoratorMetadata": true,
    "removeComments": false            
  },
  "include": [
    "src/**/*",
    "src/types/swagger-ui-express.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
